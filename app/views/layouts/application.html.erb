<!DOCTYPE html>
<html>
<head>
  <title>WIXQ 91.7 :: Millersville University Radio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
</head>
<body>

<div class="header">
	<div class="header-hero float-left">
		<%= link_to image_tag("logo.png"), root_path %>
	</div>

	<div class="audio-wrap">
		<div class="audio-player float-left player not-playing">
			<audio class="audio-stream"><source src="http://166.66.176.252:8004/;?icy=http" type="audio/mpeg" /></audio>
		</div>
		<div class="audio-marquee float-left player">
			<span class="marquee-text"></span>
      <span class="current-song"> <%= @song_title %> </span>
      by:
      <span class="current-artist"> <%= @song_artist %> </span>
		</div>
		<div class="clearfix"></div>
	</div>

  <div class="dvUserNav">
    <% if !current_user %>
      <%= link_to "Login", login_path %>
    <% else %>
      <p>Currently logged in as <%= current_user.full_name %></p>
      <%= link_to "Profile", edit_dj_path(id: current_user.id) %>
      <%= link_to "Logout", logout_path %>
      <%= link_to "Live Portal", live_path %>
      <% if current_user.is_admin %>
        <%= link_to "Admin", admin_path %>
      <% end %>
    <% end %>
  </div>

	<div class="header-bar"></div>
</div>

<div class="body-wrap">
	<% flash.each do |message_type, message| %>
	  <div class="alert alert-<%= message_type %>"><%= message %></div>
	<% end %>

	<%= yield %>
</div>

</body>
</html>
