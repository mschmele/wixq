<div class="center-content">
	<%= form_for [:admin, @show], url: {action: "create"}, html: {class:"new-show-form"} do |f| %>
		<div class="show-form-area">
		<label for="show-name">Name: </label>
			<%= f.text_field :name %>
		</div>
		<div class="show-form-area">
		<label for="show-start-time">Start Time: </label>
			<%= f.time_field :start_time %>
		</div>
		<div class="show-form-area">
		<label for="show-end-time">End Time: </label>
			<%= f.time_field :end_time %>
		</div>
		<div class="show-form-area">
		<label for="show-day-of-week">Day of the Week: </label>
		<%= select_tag(:day_of_week,
			options_for_select(
			[
				['Sunday'],
				['Monday'],
				['Tuesday'],
				['Wednesday'],
				['Thursday'],
				['Friday'],
				['Saturday']
			])
		)%>
		</div>
		<div class="new-show-form-submit">
			<%= f.submit "Create Show" %>
		</div>
	<% end %>
</div>