<div class="center-content">
	<h2>Create a new DJ</h2>
	<%= form_for [:admin, @dj], url: {action: "create"}, html: {class:"new-dj-form"} do |f| %>
		<div class="dj-form-area">
		<label for="dj[first_name]">First Name: </label>
			<%= f.text_field :first_name %>
		</div>
		<div class="dj-form-area">
		<label for="dj[last_name]">Last Name: </label>
			<%= f.text_field :last_name %>
		</div>
    <div class="dj-form-area">
    <label for="dj[bio]">Add a brief bio for this DJ: </label>
      <%= f.text_area :bio %>
    </div>
    <div class="dj-form-area">
      <% if !@shows.empty? %>
        <%= render partial: 'select_show', :locals => {:f => f } %>
        <div class="create-dj-form-submit">
          <%= f.submit "Create DJ" %>
        </div>
      <% else %>
        <p>
          Uh oh! There are no shows! <%= link_to "Create a show now",
          admin_shows_path + "/new" %>
        </p>
      <% end %>
    </div>
	<% end %>
</div>
