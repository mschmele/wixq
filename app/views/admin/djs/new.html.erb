<div class="center-content">
	<h2>Create a new DJ</h2>

	<%= form_for [:admin, @dj], url: {action: "create"}, html: {class:"new-dj-form"} do |f| %>
		<div class="dj-form-area">
		<label for="dj_first_name">First Name: </label>
			<%= f.text_field :first_name %>
		</div>
		<div class="dj-form-area">
		<label for="dj_last_name">Last Name: </label>
			<%= f.text_field :last_name %>
		</div>
		<div class="dj-form-area">
		<%= render partial: 'select_show', :locals => {:f => f, :empty => @shows.empty?} %>
		</div>
	<% end %>
</div>